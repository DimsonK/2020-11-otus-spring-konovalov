[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = true
indent_size = 4
indent_style = space

[{*.json, *.js}]
indent_size = 2
indent_style = space

[*.java]
indent_size = 4
indent_style = space

[{*.yml, *.yaml}]
indent_size = 2
indent_style = space

[{*.html, *.xml, *.xsl, *.xsd}]
indent_size = 4
indent_style = space
